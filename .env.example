# --- 126 Mail Configuration (Brain) ---
# Used for receiving instructions via email
IMAP_HOST=imap.126.com
IMAP_PORT=993
IMAP_USER=your_email@126.com
IMAP_PASS=your_app_password
IMAP_TLS=true
IMAP_REJECT_UNAUTHORIZED=false
IMAP_MAILBOX=INBOX

# Used for sending responses via email
SMTP_HOST=smtp.126.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@126.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@126.com
SMTP_REJECT_UNAUTHORIZED=false

# --- Azure Communication Services ---
# Used for sending system alerts/notifications (optional, alternate to SMTP)
# ACS_CONNECTION_STRING="endpoint=https://<resource>.communication.azure.com/;accesskey=<key>"
